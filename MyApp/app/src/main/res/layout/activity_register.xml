<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212832"
    android:padding="10dp"
    tools:context=".RegisterActivity">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/polytechnic" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldEmail"
        android:layout_below="@id/logo"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#8CAAB9"
        android:hint="Email">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#03A9F4"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="Password"
        android:layout_below="@id/textFieldEmail"
        android:textColorHint="#8CAAB9"
        app:endIconMode="password_toggle"
        app:endIconTint="#8CAAB9">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="#03A9F4"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldConfirmPw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="Confirm Password"
        android:layout_below="@id/textFieldPassword"
        android:textColorHint="#8CAAB9"
        app:endIconMode="password_toggle"
        app:endIconTint="#8CAAB9">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="#03A9F4"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldName"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/textFieldConfirmPw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#8CAAB9"
        android:hint="Name">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#03A9F4"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldPhone"
        android:layout_below="@id/textFieldName"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#8CAAB9"
        android:hint="Phone">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textColor="#03A9F4"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldAddress"
        android:layout_below="@id/textFieldPhone"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#8CAAB9"
        android:hint="Address">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#03A9F4"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <RelativeLayout
        android:id="@+id/layoutTv"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textFieldAddress">


        <TextView
            android:id="@+id/txtGoLogin"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="Bạn đã có tài khoản? Về đăng nhập"
            android:textColor="#FED36A"
            android:textSize="16sp" />
    </RelativeLayout>



    <Button
        android:id="@+id/btnRegister"
        android:layout_above="@id/btnReset"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        style="@style/Widget.Material3.Button.Icon"
        android:backgroundTint="#FED36A"
        android:text="Đăng Ký"
        android:textColor="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnReset"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        style="?attr/materialButtonOutlinedStyle"
        android:text="Reset"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:strokeColor ="#FFFFFF"
        app:strokeWidth ="2dp"
        />

</RelativeLayout>